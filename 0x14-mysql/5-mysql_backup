#!/user/bin/env bash

# Check if the password argument is provided
if [ -z "$1" ]; then
  echo "Please provide the MySQL root password as an argument."
  exit 1
fi

# Define the backup file name with the current date
backup_file="backup-$(date +'%d-%m-%Y').sql"

# Generate the MySQL dump
mysqldump -u root -p"$1" --all-databases > "$backup_file"

# Check if the dump was successful
if [ $? -eq 0 ]; then
  echo "MySQL dump created: $backup_file"

  # Compress the dump file
  tar -czvf "$backup_file.tar.gz" "$backup_file"

  # Check if the compression was successful
  if [ $? -eq 0 ]; then
    echo "Backup archive created: $backup_file.tar.gz"
    # Remove the dump file after compression
    rm "$backup_file"
  else
    echo "Failed to compress the backup file."
    exit 1
  fi
else
  echo "Failed to create MySQL dump."
  exit 1
fi
